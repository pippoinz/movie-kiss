{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run pylint",
            "type": "shell",
            "command": "pylint",
            "group": "build",
            "args": [
                "${workspaceFolder}/**/*.py"
            ],
            "presentation": {
                "showReuseMessage": false,
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run pytest",
            "type": "shell",
            "command": "pytest",
            "group": "test",
            "args": [
                "--cov=./src",
                "${workspaceFolder}/tests"
            ],
            "presentation": {
                "showReuseMessage": false,
            },
            "problemMatcher": "$msCompile"
        }
    ]
}